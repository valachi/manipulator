#encoding: UTF-8
!!!
%html
  %head
    =content_tag :title, @title
    =stylesheet_link_tag "application"
    =javascript_include_tag "application"
    =javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.js"
    =csrf_meta_tags
  %body
    #container
      .holder
        #header
          #teaser
        #left_column
          %ul
            %li= link_to 'Главная', root_path
            %li Цены
            %li Услуги
            %li= link_to 'Информация', info_path
            %li FAQ
        #center_column
          =yield
        #right_column
          =render 'shared/form', order_form: OrderForm.new
        #clear
        #footer
