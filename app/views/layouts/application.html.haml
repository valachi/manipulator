%html
  %head
    =content_tag :title, @title
    =stylesheet_link_tag "application"
    =javascript_include_tag "application"
    =javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.js"
    =csrf_meta_tags
  %body
    #container
      .holder
        #header
          #teaser
            %p Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed sit amet lorem felis, posuere ornare arcu. Maecenas a faucibus tellus. Lorem ipsum dolor sit amet, consectetur adipiscing elit.
        #left_column
          %ul
            %li= link_to 'Главная', root_path
            %li= link_to 'Цены', prices_path
            %li= link_to 'Услуги', services_path
            %li= link_to 'Информация', info_path
            %li= link_to 'FAQ', faq_path
